{
    "name": "pw-admin-csharp",
    "version": "0.1.0",
    "description": "PWAdmin with csharp, for Perfect World server management",
    "types": "./src/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/shadowvzs/pwAdmin3.git"
    },
    "main": "../wwwroot/index.js",
    "scripts": {
        "clean": "rimraf ../wwwroot",
        "pre-build": "npm run type-generator",
        "build-base": "npm run clean && npx eslint .",
        "build": "npm run pre-build && npm run build-base && cross-env NODE_ENV=production webpack --mode production",
        "build:local": "npm run pre-build:local && npm run build-base",
        "jest:test": "npx jest --runInBand . --reporters=default --reporters=jest-junit --json --coverage --testLocationInResults --outputFile=./coverage/report.json",
        "serve": "cross-env NODE_ENV=development webpack-dev-server --progress --open",
        "build:dev": "npm run clean && cross-env NODE_ENV=development webpack",
        "watch:dev": "npm run build:dev -- -w",
        "lint-staged": "lint-staged",
        "eslint": "npm run lint:source && npm run lint:test",
        "lint:errors": "eslint src --quiet",
        "eslint-source": "eslint src",
        "eslint-test": "eslint test",
        "es-lint-test": "npm run eslint && npm run test:unit",
        "test": "jest . --maxWorkers=4",
        "start": "npm run type-generator && webpack-dev-server --progress --mode development --history-api-fallback",
        "locale:update": "npx lingui extract",
        "locale:compile": "npx lingui compile",
        "locale:migrate": "npm run locale:update && cd ./src/locales && node migrator && npm run locale:compile",
        "type-generator": "npx openapi-typescript-codegen --input ./src/api/swagger-pwadmin.json --output ./src/types/api --exportCore=false --exportServices=false"
    },
    "dependencies": {
        "@lingui/babel-preset-react": "^2.9.2",
        "@lingui/cli": "^4.6.0",
        "@lingui/core": "^4.6.0",
        "@lingui/format-json": "^4.6.0",
        "@lingui/react": "^4.6.0",
        "@shadowvzs/react-view-router": "^0.8.16",
        "axios": "^1.6.2",
        "inversify": "^6.0.2",
        "mobx": "^6.12.0",
        "mobx-react-lite": "^4.0.5",
        "postcss-flexbugs-fixes": "^5.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.14"
    },
    "author": "shadowvzs",
    "license": "ISC",
    "release": {
        "analyzeCommits": "simple-commit-message"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.23.6",
        "@babel/plugin-syntax-decorators": "^7.23.3",
        "@babel/plugin-transform-modules-commonjs": "^7.23.3",
        "@babel/preset-env": "^7.23.6",
        "@babel/preset-react": "^7.23.3",
        "@babel/preset-typescript": "^7.23.3",
        "@testing-library/dom": "^9.3.3",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/jest": "^29.5.11",
        "@types/lingui__core": "^3.0.0",
        "@types/lingui__macro": "^3.0.0",
        "@types/lingui__react": "^3.0.0",
        "@types/node": "^20.10.4",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "autoprefixer": "^10.4.16",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^9.1.3",
        "babel-plugin-parameter-decorator": "^1.0.16",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "cross-env": "^7.0.3",
        "css-loader": "^6.8.1",
        "dotenv": "^16.3.1",
        "eslint": "^8.55.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-find-rules": "^4.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "html-webpack-plugin": "^5.5.4",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "junit": "^1.4.9",
        "lint-staged": "^15.2.0",
        "mini-css-extract-plugin": "^2.7.6",
        "node-fetch-commonjs": "^3.3.2",
        "openapi-typescript-codegen": "^0.25.0",
        "path-browserify": "^1.0.1",
        "postcss": "^8.4.32",
        "postcss-cssnext": "^3.1.1",
        "postcss-import": "^15.1.0",
        "postcss-loader": "^7.3.3",
        "postcss-preset-env": "^9.2.0",
        "prettier": "^3.1.1",
        "progress-bar-webpack-plugin": "^2.1.0",
        "rimraf": "^5.0.5",
        "speed-measure-webpack-plugin": "^1.5.0",
        "style-loader": "^3.3.3",
        "tailwindcss": "^3.3.6",
        "terser-webpack-plugin": "^5.3.9",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "typescript-eslint-language-service": "^5.0.5",
        "webpack": "^5.89.0",
        "webpack-bundle-analyzer": "^4.6.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "npm run locale:update",
            "npx eslint --fix --quiet",
            "git add",
            "npx jest .",
            "npx prettier --write --max-arg-length=300"
        ],
        "*.{ts,tsx,js,json,css,md,mjs,mdx,html}": "npx prettier --write --max-arg-length=300"
    },
    "jest-junit": {
        "outputDirectory": "reports",
        "outputName": "jest-junit.xml",
        "ancestorSeparator": " â€º ",
        "uniqueOutputName": "false",
        "suiteNameTemplate": "{filepath}",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}"
    }
}
