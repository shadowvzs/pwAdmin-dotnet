{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": ["ES2022"],
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "noEmit": false,
        "target": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "removeComments": true,
        "noEmitOnError": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "plugins": [
            {
                "name": "typescript-eslint-language-service"
            }
        ],
        "paths": {
            "@api/*": ["./src/api/*"],
            "@ts/*": ["./src/types/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@configs/*": ["./src/configs/*"],
            "@utility/*": ["./src/utility/*"],
            "@locales/*": ["./src/locales/*"],
            "@app/*": ["./src/app/*"],
            "@pages/*": ["./src/pages/*"],
            "@modal/*": ["./src/modal/*"],
            "@services/*": ["./src/services/*"],
            "@components/*": ["./src/components/*"]
        }
    },
    "include": ["./src/*", "./src/*.d.ts", "babel.config.js", "**/*.ts", "**/*.tsx"],
    "exclude": [
        "*.mjs",
        "./postcss.config.js",
        "./tailwind.config.js",
        "./resolve-tsconfig-path-to-webpack-alias.js",
        "./babel.config.js",
        "./eslintrc.js",
        "./webpack.config.js"
    ]
}
